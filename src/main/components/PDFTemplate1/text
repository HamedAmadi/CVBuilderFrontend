const resumeSchema = new Schema( {
  userId: {
    type: Schema.Types.ObjectId,
    ref: 'User',
    required: true
  },
  templateNumber : String | null,
  basicInformation: {
    firstName: String,
    lastName: String,
    jobTitle: String,
    email: String,
    mobileNumber: String,
    soldieringStatus: String,
    maritalStatus: String,
    birthDate: String,
    city: String,
    address: String,
    userImageBase64: String,
  },
  aboutMe: {
    description: String,
  },
  educationItem: [
    {
      degree: String,
      endDate: String,
      startDate: String,
      study: String,
      university: String
    }
  ],
  jobExperienceItem: [
    {
      jobPosition: String,
      companyName: String,
      city: String,
      startDate: String,
      endDate: String
    }
  ],
  socialMediaItem: [
    {
      title: String,
      link: String,
    }
  ],
  skillItem: [
    {
      skillName: String,
      level: String,
    }
  ],
  languageItem: [
    {
      languageName: String,
      level: String,
    }
  ],
  certificateItem: [
    {
      certificateName: String,
      institution: String,
      startDate: String,
      endDate: String
    }
  ],
  projectItem: [
    {
      title: String,
      employer: String,
      link: String,
      startDate: String,
      endDate: String,
      description: String,
    }
  ],
} )
